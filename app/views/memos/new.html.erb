<%= form_with(model: @memo, local: true) do |f| %>
<%= render 'shared/error_messages', object: f.object %>


  <div class="row">
    <div class="col-md-3 col-md-offset-3">
      <%= f.label :カテゴリーを選択 %>
      <br>
      <%= f.collection_select :category_id, Category.all, :id, :name, { prompt: '選択してください' }, class: 'form-control' %>
      <br>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="form-group">
        <%= f.label :タイトル %>
        <%= f.text_field :title, class:"form-control" %>
      </div>
    </div>
  </div>
  
  <div class="row">
    <div class="col-sm-1 col-md-offset-3">
      <div class="form-group">
        <%=f.label :重量 %>
        <%=f.text_field :weight, class:"form-control", id:"email"%>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-1 col-md-offset-3">
      <div class="form-group">
        <%=f.label :回数 %>
        <%=f.text_field :times, class:"form-control", id:"pwd"%>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-1 col-md-offset-3">
      <div class="form-group">
        <%=f.label :セット数 %>
        <%=f.text_field :set, class:"form-control", id:"pwd"%>
      </div>
    </div>
  </div>
  
      <div class="form-group">
        <%=f.label :メモ %>
        <%=f.text_area :memo, class:"form-control", id:"pwd", size: "24x6"%>
      </div>

  <%= f.submit"保存", class: "btn btn-primary btn-lg mt-1 mb-3 mr-5 " %>
<% end %>

<p class="wenitest">ウェニ投稿</p>