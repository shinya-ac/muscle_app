
<div class="container" style="margin-top: 5%;">
  <div class="row">
    <div class="col-sm-4"> </div>
<div class="col-md-4">
  
<h1 class="text-center text-success"> ログイン</h1>
<br/>

<div class="col-sm-12">
<br/>
      
<%= form_with(url: login_path, scope: :session, local: true) do |f| %>
  
  <div class="form-group">
    <%=f.label :メールアドレス %>
    <%=f.email_field :email, class:"form-control", id:"email"%>
  </div>

  <div class="form-group">
    <%=f.label :パスワード %>
    <%=f.password_field :password, class:"form-control", id:"pwd"%>
  </div>
  
  
  <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span>ログイン状態を保持する</span>
  <% end %>
  

  <%= f.submit"ログイン", class: "btn btn-primary btn-lg mt-1 mb-3 mr-5 " %>
<div class="clearfix">

<br/>
<%= link_to "新規登録はこちら",   signup_path, {class: "float-right btn btn-block btn-danger"}  %>
</div>
</div>

<% end %>

<%= if Rails.env.development? %>
<p class="wenitest">ウェニッキ</p>
<% end %>

</div>