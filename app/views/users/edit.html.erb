
<div class="container" style="margin-top: 5%;">
  <div class="row">
    <div class="col-sm-4"> </div>
<div class="col-md-4">
  
<h1 class="text-center text-success"> アカウント編集</h1>
<br/>

<div class="col-sm-12">
<br/>
      
<%= form_with(model: @user, local: true) do |f| %>
<%= render 'shared/error_messages', object: f.object %>

  <div class="form-group">
    <%=f.label :名前 %>
    <%=f.text_field :name, class:"form-control", id:"email"%>
  </div>
  
  <div class="form-group">
    <%=f.label :メールアドレス %>
    <%=f.email_field :email, class:"form-control", id:"email"%>
  </div>

  <div class="form-group">
    <%=f.label :パスワード %>
    <%=f.password_field :password, class:"form-control", id:"pwd"%>
  </div>

  <div class="form-group">
    <%=f.label :パスワード（確認） %>
    <%=f.password_field :password_confirmation, class:"form-control", id:"pwd"%>
  </div>

    <%= f.submit"更新", class: "btn btn-primary btn-lg mt-1 mb-3 mr-5 " %>
<div class="clearfix">
  
<br/>
    <% if current_user.admin? || current_user?(@user) %>
          <%= link_to "アカウントを削除する", @user, method: :delete,
                                  data: { confirm: "本当に削除しますか" } %>
    <% end %>
    

</div>
</div>

<% end %>

<p class="wenitest">ウェニッキ書いてる</p>

</div>